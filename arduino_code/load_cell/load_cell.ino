
const float offset = 100;


////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

void setup() {
  Serial.begin(9600);
}

////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////
////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////////

void loop() {
  // Read analog voltage from the filter
  int rawValue = analogRead(A0);

  // Convert voltage to weight
  float weight = 10 * ((rawValue - offset) / (1024 - offset));
  if  (weight < 0)
  {
    weight = 0;
  }

  Serial.print("Weight: ");
  Serial.print(weight);
  Serial.println(" grams");

  delay(100);
}

